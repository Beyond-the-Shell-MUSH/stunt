 server/configure |   49 ++++++++++++++++++++++++++++++++++++++++++++++++-
 1 file changed, 48 insertions(+), 1 deletion(-)

diff --git a/server/configure b/server/configure
index 74b5943..b3e1974 100755
--- a/server/configure
+++ b/server/configure
@@ -607,6 +607,7 @@ LN_S
 POW_LIB
 LIBOBJS
 ALLOCA
+HAVE_GPERF
 have_telnet
 EGREP
 GREP
@@ -6468,6 +6469,52 @@ else
 $as_echo "$as_me: openssl will not be included in this build" >&6;}
 fi
 
+# Extract the first word of "gperf", so it can be a program name with args.
+set dummy gperf; ac_word=$2
+{ $as_echo "$as_me:${as_lineno-$LINENO}: checking for $ac_word" >&5
+$as_echo_n "checking for $ac_word... " >&6; }
+if ${ac_cv_prog_HAVE_GPERF+:} false; then :
+  $as_echo_n "(cached) " >&6
+else
+  if test -n "$HAVE_GPERF"; then
+  ac_cv_prog_HAVE_GPERF="$HAVE_GPERF" # Let the user override the test.
+else
+as_save_IFS=$IFS; IFS=$PATH_SEPARATOR
+for as_dir in $PATH
+do
+  IFS=$as_save_IFS
+  test -z "$as_dir" && as_dir=.
+    for ac_exec_ext in '' $ac_executable_extensions; do
+  if { test -f "$as_dir/$ac_word$ac_exec_ext" && $as_test_x "$as_dir/$ac_word$ac_exec_ext"; }; then
+    ac_cv_prog_HAVE_GPERF="true"
+    $as_echo "$as_me:${as_lineno-$LINENO}: found $as_dir/$ac_word$ac_exec_ext" >&5
+    break 2
+  fi
+done
+  done
+IFS=$as_save_IFS
+
+  test -z "$ac_cv_prog_HAVE_GPERF" && ac_cv_prog_HAVE_GPERF="false"
+fi
+fi
+HAVE_GPERF=$ac_cv_prog_HAVE_GPERF
+if test -n "$HAVE_GPERF"; then
+  { $as_echo "$as_me:${as_lineno-$LINENO}: result: $HAVE_GPERF" >&5
+$as_echo "$HAVE_GPERF" >&6; }
+else
+  { $as_echo "$as_me:${as_lineno-$LINENO}: result: no" >&5
+$as_echo "no" >&6; }
+fi
+
+
+
+if test "x$HAVE_GPERF" = "xfalse"; then
+   { $as_echo "$as_me:${as_lineno-$LINENO}: WARNING: GNU gperf not found. This probably won't matter unless you intend to hack on the MOO language itself." >&5
+$as_echo "$as_me: WARNING: GNU gperf not found. This probably won't matter unless you intend to hack on the MOO language itself." >&2;}
+else
+   { $as_echo "$as_me:${as_lineno-$LINENO}: GNU gperf found" >&5
+$as_echo "$as_me: GNU gperf found" >&6;}
+fi
 
 { $as_echo "$as_me:${as_lineno-$LINENO}: checking for inline" >&5
 $as_echo_n "checking for inline... " >&6; }
@@ -8692,5 +8739,5 @@ fi
 
 
 # Local Variables:
-# mode: c
+# mode: autoconf
 # End:
