+file_handle file_table[FILE_IO_MAX_FILES];
+
+char file_handle_valid(Var fhandle) {
+  int32 i = fhandle.v.num;
+  if(fhandle.type != TYPE_INT)
+	 return 0;
+  if((i < 0) || (i >= FILE_IO_MAX_FILES))
+	 return 0;
+  return file_table[i].valid;
