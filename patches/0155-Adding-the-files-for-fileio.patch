+static package
+bf_file_openmode(Var arglist, Byte next, void *vdata, Objid progr)
+{
+  package r;
+  Var fhandle = arglist.v.list[1];
+  char buffer[5] = {0, 0, 0, 0, 0};
+  file_mode mode;
+  file_type type;
+  Var rv;   
