+  } else {
+	 type = file_handle_type(fhandle);
+	 mode = file_handle_mode(fhandle);
+	 if(mode & FILE_O_READ) {
+		buffer[0] = 'r';
+	 } else if(mode & FILE_O_WRITE) {
+		buffer[0] = 'w';
+	 }
+	 if(mode & (FILE_O_READ | FILE_O_WRITE))
+		buffer[1] = '+';
+	 else
+		buffer[1] = '-';
+
+	 if(type == file_type_binary)
+		buffer[2] = 'b';
+	 else
+		buffer[2] = 't';
+	 
+	 if(mode & FILE_O_FLUSH)
+		buffer[3] = 'f';
+	 else
+		buffer[3] = 'n';
+	 
+
+	 rv.type = TYPE_STR;
+	 rv.v.str = str_dup(buffer);
+	 r = make_var_pack(rv);
+  }
+  free_var(arglist);
+  return r;
