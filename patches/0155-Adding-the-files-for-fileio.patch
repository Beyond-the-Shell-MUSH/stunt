+  else if (S_ISFIFO(st_mode))
+	 return "fifo";
+  else if (S_ISBLK(st_mode))
+	 return "block";
+  else if (S_ISSOCK(st_mode))
+	 return "socket";
+  else
+	 return "unknown";
+}
