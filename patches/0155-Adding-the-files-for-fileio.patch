+  if(head) {
+	 next = head->next;
+	 free(head);
+	 head = next;
+	 while(head != NULL) {
+		next = head->next;
+		if(strings_too)
+		  free_str(head->line);
+		myfree(head, M_STRING);
+		head = next;
+	 }   
+  }
+}
