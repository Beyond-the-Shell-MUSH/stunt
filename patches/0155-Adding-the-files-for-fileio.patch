+const char *raw_bytes_to_clean(const char *buffer, int buflen) {
+  static Stream *s = 0;
+  int i;
+  if(!s) 
+	 s = new_stream(100);
+
+  for (i = 0; i < buflen; i++) {
+	 unsigned char	c = buffer[i];
+	 
+	 if (isgraph(c)  ||  c == ' ' || c == '\t')
+		stream_add_char(s, c);
+	 /* else drop it on the floor */
+  }
+  
+  return reset_stream(s);
+}	 
